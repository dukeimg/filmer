-title(t('users.password_reset'))
.flexbox.flex-center.container-margin-lg.flex-column
  .mdl-card.mdl-shadow--2dp
    = render('layouts/messages')
    .mdl-card__title.mdl-card--border
      .mdl-card__title-text= t('users.password_reset')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token
      .mdl-card__supporting-text
        %p= t('users.new-password')
        .mdl-textfield.mdl-js-textfield
          = f.password_field :password, :class => "mdl-textfield__input"
          %label.mdl-textfield__label{:for => 'password'} #{t('users.password-length')} 8 #{t('users.symbols')}
        %p= t('users.password-again')
        .mdl-textfield.mdl-js-textfield
          = f.password_field :password_confirmation, :class => "mdl-textfield__input"
          %label.mdl-textfield__label{:for => 'password_confirmation'}= t('users.password')
      .mdl-card__actions.mdl-card--border
        = f.submit t('send'), :class => 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent'
    .mdl-card__supporting-text.text-right
      = render "devise/shared/links"

