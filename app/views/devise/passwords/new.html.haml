-title(t('users.forgot'))
.flexbox.flex-center.container-margin-lg.flex-column
  .mdl-card.mdl-shadow--2dp
    = render('layouts/messages')
    .mdl-card__title.mdl-card--border
      .mdl-card__title-text= t('users.send_reset_instructions')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.block-center
        = f.label :email, t('users.email'), :class => 'mdl-textfield__label'
        = f.email_field :email, :class => "mdl-textfield__input"
      .mdl-card__actions.mdl-card--border
        = f.submit t('send'), :class => 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent'
    .mdl-card__supporting-text.text-right
      = render "devise/shared/links"
