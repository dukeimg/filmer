-title(t('users.sign-up'))
%p.notice= notice
%p.alert= alert
.container-fullscreen.flexbox.flex-center.container-margin-lg
  .mdl-card.mdl-shadow--2dp
    = render('layouts/messages')
    .mdl-card__title.mdl-card--border
      .mdl-card__title-text= t('users.sign-up')
    = form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"} do |f|
      .mdl-card__supporting-text
        %span= t('users.what-is-your-name')
      .mdl-grid{:style => 'padding: 0 8px;'}
        .mdl-textfield.mdl-js-textfield.mdl-cell.mdl-cell--6-col-desktop.mdl-cell--8-col-tablet{:style => 'margin: 0 8px;'}
          = f.text_field :name, :class => "mdl-textfield__input", :required => true
          %label.mdl-textfield__label{:for => 'name'}= t("users.name")
        .mdl-textfield.mdl-js-textfield.mdl-cell.mdl-cell--6-col-desktop.mdl-cell--8-col-tablet{:style => 'margin: 0 8px;'}
          = f.text_field :surname, :class => "mdl-textfield__input", :required => false
          %label.mdl-textfield__label{:for => 'surname'}= t("users.surname")
      .mdl-card__supporting-text{:style => 'padding: 0 16px;'}
        %span= t('users.choose-an-username')
        .mdl-textfield.mdl-js-textfield
          = f.text_field :username, :class => "mdl-textfield__input", :required => true
          %label.mdl-textfield__label{:for => 'username'}= t("users.username")
        %span= t('users.email')
        .mdl-textfield.mdl-js-textfield
          = f.email_field :email, :class => "mdl-textfield__input", :required => true
          %label.mdl-textfield__label{:for => 'email'}= t("users.email")
        %span= t('users.password')
        .mdl-textfield.mdl-js-textfield
          = f.password_field :password,
               :placeholder => "",
               :class => "mdl-textfield__input",
               autocomplete: "off",
               :required => true
          %label.mdl-textfield__label{:for => 'password'} #{t('users.password-length')} #{@minimum_password_length} #{t('users.symbols')}
        %span= t('users.password-again')
        .mdl-textfield.mdl-js-textfield
          = f.password_field :password_confirmation, :class => "mdl-textfield__input", autocomplete: "off", :required => true
          %label.mdl-textfield__label{:for => 'password_confirmation'}= t("users.password")
      .mdl-card__actions.mdl-card--border
        = f.submit t("users.sign-up"), :class => "mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect"