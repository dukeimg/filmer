- title(t('albums.new'))
=form_for @album do |f|
  .mdl-grid
    .mdl-cell.mdl-cell--12-col
      .mdl-color--white.mdl-shadow--2dp
        .mdl-card__title
          .mdl-card__title-text= t('albums.new')
        .mdl-card__supporting-text
          .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            = f.label :title, t('albums.title'), :class => 'mdl-textfield__label'
            = f.text_field :title, :class => "mdl-textfield__input"
          %br
          .mdl-textfield
            = f.label :private, :class => 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do
              = f.check_box :private, :class => 'mdl-checkbox__input'
              %span.mdl-checkbox__label= t('albums.private')
        .mdl-card__actions.mdl-card--border
          = f.submit t('save'), :class => 'mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent'