.mdl-grid
  .mdl-cell.mdl-cell--12-col.mdl-color--white.mdl-shadow--2dp#new
    =form_for @photo, url: photos_path , :multipart => true do |f|
      .mdl-card__supporting-text
        %p=t('pictures.upload-message')
      .mdl-card__actions.mdl-card--border
        .flexbox.flex-center
          .mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--accent{:onclick => 'picturesUpload()'}= t('pictures.choose-files')
          = f.file_field :image, :style => 'visibility: hidden; position: absolute', multiple: true, name: 'photo[image]', id: 'photo_image'
<script id="template-upload" type="text/x-tmpl"><div class="upload">{%=o.name%}<div class="progress"><div class="mdl-progress mdl-js-progress"></div></div></div></script>

