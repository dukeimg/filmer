.mdl-card__actions.mdl-card--border.comments
  .mdl-card__title
    .mdl-card__title-text New Comment
  .mdl-card__supporting-text
    = form_for [@photo, @comment], remote: true,
     :html =>  {'ng-submit' => 'commentsCtrl.create(comment)'} do |f|
      .flexbox
        .mdl-textfield.mdl-js-textfield.comment__textarea
          = f.label :body, 'Join the discussion...', :class => 'mdl-textfield__label'
          = f.text_area :body, class: 'mdl-textfield__input', :rows => 1, 'ng-model' => 'commentCtrl.comments.body', :required => true
        %button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--mini-fab.mdl-button--colored{:type => 'submit'}
          %i.material-icons send