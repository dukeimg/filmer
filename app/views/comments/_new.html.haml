.mdl-card__actions.mdl-card--border.comments
  .mdl-card__title
    .mdl-card__title-text New Comment
  .mdl-card__supporting-text
    %form{'ng-submit' => 'create(comment)'}
      .flexbox
        .mdl-textfield.mdl-js-textfield.comment__textarea
          %label.mdl-textfield__label{for: :body} 'Join the discussion...'
          %textarea.mdl-textfield__input{:name => 'body', :rows => 1, 'ng-model' => 'comment.body', :required => true }
        %button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--mini-fab.mdl-button--colored{:type => 'submit'}
          %i.material-icons send