- title (@user.name)
- if @current.id == @user.id
  = render('current')
- else
  = render('else')
= render ('users/albums') unless @albums.count == 0
- if @photos.count != 0
  .mdl-cell.mdl-cell--12-col.mdl-shadow--2dp.mdl-color--white
    .mdl-card__title
      .mdl-card__title-text
        %span
          = t('users.photos_of')
          = @user.username
.mdl-grid#photos
  = render @photos
.mdl-grid#more
  = will_paginate @photos