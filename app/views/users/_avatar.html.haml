=form_for current_user, :html => {'data-type' => 'json'}, remote: true, :authenticity_token => true, :format => :json, :multipart => true do |f|
  .mdl-card__supporting-text
    %p=t('pictures.upload-message')
  .mdl-card__actions.mdl-card--border
    .flexbox.flex-center
      .mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--accent{:onclick => 'avatar_upload()'}= t('pictures.choose-file')
      = f.file_field :avatar, :style => 'visibility: hidden; position: absolute'